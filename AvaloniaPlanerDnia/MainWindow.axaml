<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaPlanerDnia.MainWindow"
        Title="AvaloniaPlanerDnia">
        <Grid>
        
                <StackPanel Orientation="Vertical" Margin="10">
                        <TextBox x:Name="taskNameTextBox" Width="200" Margin="5" />
                        <ComboBox x:Name="categoryComboBox" Width="200" Margin="5">
                                <ComboBoxItem Content="Praca" />
                                <ComboBoxItem Content="Relaks" />
                                <ComboBoxItem Content="Zakupy" />
                        </ComboBox>
                        <Button Content="Dodaj zadanie" Width="100" Margin="5"/>
                </StackPanel>
                
                <StackPanel x:Name="TaskList" Margin="10,60,10,100">
                </StackPanel>
                
                <TextBlock x:Name="PodsumowanieTextBlock" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="16"/>
            
                
        </Grid>
</Window>
